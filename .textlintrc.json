{
  "filters": {
    "comments": true
  },
  "plugins": ["latex2e"],
  "rules": {
    "alex": {
      "allow": ["attacks", "easy", "special"]
    },
    "apostrophe": false,
    "common-misspellings": {
      "ignore": []
    },
    "diacritics": true,
    "doubled-spaces": false,
    "editorconfig": false,
    "en-capitalization": true,
    "en-spell": {
      "personalDictionary": ["DARPA", "Inferencing", "SMISC", "Jernej", "OneDrive", "Homebrew", "dotfiles"]
    },
    "max-number-of-lines": {
      "max": 300
    },
    "no-dead-link": {
      "checkRelative": true,
      "baseURI": null,
      "ignore": ["https://help.medium.com/hc/en-us/articles/214550207-Importing-a-post-to-Medium"],
      "preferGET": [],
      "ignoreRedirects": true,
      "retry": 3,
      "userAgent": "textlint-rule-no-dead-link/1.0",
      "maxRetryTime": 10
    },
    "no-empty-section": true,
    "no-start-duplicated-conjunction": {
      "interval": 2
    },
    "no-todo": true,
    "stop-words": {
      "defaultWords": true,
      "exclude": ["discharge"]
    },
    "terminology": {
      "defaultTerms": true
    },
    "unexpanded-acronym": {
      "ignore_acronyms": ["GRO"],
      "min_acronym_len": 3
    },
    "@textlint-rule/no-duplicate-abbr": true,
    "@textlint-rule/no-invalid-control-character": true
  }
}
